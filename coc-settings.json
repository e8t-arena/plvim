{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "rust-analyzer.server.path": "~/.local/bin/rust-analyzer",
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "typescript.tsx",
    "css",
    "elixir",
    /* "markdown" */
    "python"
  ],
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx"
  ],
  "coc.preferences.diagnostic.virtualText": true,
  "html.format.enable": false,
  "html.autoClosingTags": true,
  "typescript.suggest.autoImports": true,
  "workspace.ignoredFiletypes": ["markdown", "log", "txt", "help", "asm"]
}
